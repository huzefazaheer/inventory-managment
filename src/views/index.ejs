<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <title>Inventory Manager</title>
</head>
<body class="homepage">
    <div class="sidebar">
        <a href="/"><img src="/logo.svg" alt="" class="logo"></a>
        <div class="mainmenu">
            <img class="icon" src="/bookmark.svg" alt="" class="logo">
            <img class="icon" src="/logs.svg" alt="" class="logo">
            <img class="icon" src="/send.svg" alt="" class="logo">
            <img class="icon" src="/user.svg" alt="" class="logo">
        </div>
        <img class="icon call" src="/contact.svg" alt="" class="logo">
    </div>


    <div class="left">
    <div class="top">
        <h1>Inventory</h1>
        <a href="/new" class="addproduct">+ Add Product</a>
    </div>

    <div class="querytools">
        <form id="query" action="/" method="get">
            <div class="searchinputs">
                <input type="text" name="pno" id="pno" placeholder="Part Number...">
                <input type="text" name="pname" id="pname" placeholder="Part Name...">
                <select name="cat" id="cat">
                    <option value="" disabled selected hidden>Select Category</option>
                    <option value="resistor">Resistor</option>
                    <option value="capacitor">Capacitor</option>
                    <option value="microcontroller">Microcontroller</option>
                    <option value="opamp">OpAmp</option>
                    <option value="diode">Diode</option>
                    <option value="ic">IC</option>
                    <option value="transistor">Transistor</option>
                    <option value="sensor">Sensor</option>
                </select>
            </div>
            <button type="submit">Search</button> 
        </form>
    </div>

    <table>
        <tr>
            <th class="partheading">Part ID</th>
            <th class="nameheading">Name</th>
            <th class="catheading">Category</th>
            <th class="manuheading">Manufacturer</th>
            <th class="valueheading">Value</th>
        </tr>
    <% data.forEach(item => { %>
        <tr class="item">
        <td class="partno"><a href="/item/<%= item.id%>"><%= item.partno %></a></td>
        <td class="name"><a href="/item/<%= item.id%>"><%= item.name %></a></td>
        <td class="category"><%= item.category %></td>
        <td class="man"><%= item.manufacturer %></td>
        <td class="val"><%= item.value %></td>
        <td><a href="/edit/<%= item.id %>" id="edit">Edit</a></td>
        <td><a href="/delete/<%= item.id %>" id="del">Delete</a></td>
        </tr>
    <% })%>
    </table>
    </div>

</body>
</html>