<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <title>Inventory Manager</title>
</head>
<body>
    <div class="sidebar">
        <img src="/logo.svg" alt="" class="logo">
        <div class="mainmenu">
            <img class="icon" src="/bookmark.svg" alt="" class="logo">
            <img class="icon" src="/logs.svg" alt="" class="logo">
            <img class="icon" src="/send.svg" alt="" class="logo">
            <img class="icon" src="/user.svg" alt="" class="logo">
        </div>
        <img class="icon call" src="/contact.svg" alt="" class="logo">
    </div>


    <div class="left">
    <div class="top">
        <h1>Inventory</h1>
        <a href="/new">+ Add Product</a>
    </div>
    <table>
        <tr>
            <th class="idheading">#</th>
            <th class="partheading">Part ID</th>
            <th class="nameheading">Name</th>
            <th class="catheading">Category</th>
            <th class="manuheading">Manufacturer</th>
            <th class="valueheading">Value</th>
        </tr>
    <% data.forEach(item => { %>
        <tr class="item">
        <td class="id"><%= item.id %></td>
        <td class="partno"><%= item.partno %></td>
        <td class="name"><%= item.name %></td>
        <td class="category"><%= item.category %></td>
        <td class="man"><%= item.manufacturer %></td>
        <td class="val"><%= item.value %></td>
        <td><a href="/edit/<%= item.id %>">Edit</a></td>
        <td><a href="/delete/<%= item.id %>" class="del">Delete</a></td>
        </tr>
    <% })%>
    </table>
    </div>

</body>
</html>